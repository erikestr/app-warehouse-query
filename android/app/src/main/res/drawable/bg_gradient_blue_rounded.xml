<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/air_force_blue"/>
            <corners
                android:radius="@dimen/border_corner" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="@color/gray"/>
            <corners
                android:radius="@dimen/border_corner" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/air_force_blue"
                android:startColor="@color/space_cadet_blue"
                android:angle="315" />
            <corners
                android:radius="@dimen/border_corner" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@color/air_force_blue"
                android:startColor="@color/space_cadet_blue"
                android:angle="315" />
            <corners
                android:radius="@dimen/border_corner" />
        </shape>
    </item>
</selector>